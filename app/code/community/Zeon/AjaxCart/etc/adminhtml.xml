    <acl>
        <resources>
            <admin>
                <children>
                    <zextension translate="title">
                        <title>Zeon Extensions</title>
                        <sort_order>200</sort_order>
                        <children>
                            <zeon_ajaxcart translate="title" module="zeon_ajaxcart">
                                <title>AJAX Cart</title>
                                <sort_order>500</sort_order>
                                <children>
                                    <ajaxcart_settings translate="title" module="zeon_ajaxcart">
