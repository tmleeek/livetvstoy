                    <children>
                        <ajaxcart_settings module="zeon_ajaxcart">
                            <title>Manage AJAX Cart Settings</title>
                            <sort_order>20</sort_order>
                            <action>adminhtml/system_config/edit/section/zeon_ajaxcart</action>
