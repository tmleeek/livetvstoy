<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <zeon_attributemapping translate="label"
            module="zeon_attributemapping">
            <label>Attribute Management</label>
            <tab>zextension</tab>
            <sort_order>25</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <url_rewritemanage translate="label" module="zeon_attributemapping">
                    <label>Attribute Url Rewrite Managemant</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label comment" module="zeon_attributemapping">
                            <label>Enable Cron</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable/Disable the featured products functionality.</comment>
                        </active>
                        <url_prefix>
                            <label>Attribute Option URL Suffix</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Cron update and Cache refresh needed. (NOTE: A dot "." before suffix is added automatically)</comment>
                        </url_prefix>
                    </fields>
                </url_rewritemanage>
                <top_menu translate="label" module="zeon_attributemapping">
                    <label>Site Menu Managemant</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label comment" module="zeon_attributemapping">
                            <label>Enable Cron</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable/Disable the featured products functionality.</comment>
                        </active>
                        <set_category_menu>
                            <label>Set Category Menu only</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </set_category_menu>
                        <get_categories>
                            <label>Select Categories</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>zeon_attributemapping/system_config_source_maincategory</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select categories for category manu</comment>
                        </get_categories>
                        <personalized_category>
                            <label>Select Personalized Category</label>
                            <frontend_type>select</frontend_type>
                            <source_model>zeon_attributemapping/system_config_source_maincategory</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select category for personalized gift category</comment>
                        </personalized_category>
                        <sublink_count>
                            <label>Link Count For More Link</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-number</validate>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sublink_count>
                        <attribute_list>
                            <label>Select Attributes</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>zeon_attributemapping/system_config_source_attributes</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select attributes to be shown in top menu</comment>
                        </attribute_list>
                        <seeall_enable>
                            <label>Show See All Link On Character Manu</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable/Disable the see all link from character menu.</comment>
                        </seeall_enable>
                        <sublink_count_char>
                            <label>Character Menu See All Link Count</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-number</validate>
                            <sort_order>26</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sublink_count_char>
                        <clearence_text>
                            <label>Clearence Url Text</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </clearence_text>
                        <clearence_url>
                            <label>Clearence Url</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </clearence_url>
                        <char_menu1>
                            <label>Character Menu Section 1</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>65</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </char_menu1>
                        <char_menu2>
                            <label>Character Menu Section 2</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </char_menu2>
                        <char_menu3>
                            <label>Character Menu Section 3</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>75</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </char_menu3>
                        <static_blockinmenu>
                            <label>Static Block Identifier</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>76</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Set static block name for 1st menu in top navigation.</comment>
                        </static_blockinmenu>
                        <menu_seeall_enable>
                            <label>Show See All Link On Menu</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable/Disable the see all link for all category menu.</comment>
                        </menu_seeall_enable>
                        <root_menu_clickable>
                            <label>Make Root Menu Clickable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>85</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable/Disable the root menu click.</comment>
                        </root_menu_clickable>
                    </fields>
                </top_menu>
                <front_scroller>
                    <label>Site Slider Managemant</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>3</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label comment" module="zeon_attributemapping">
                            <label>Enable Scroller</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable/Disable the top scroller.</comment>
                        </active>
                        <item_count>
                            <label>No Of Items In Slider</label>
                            <frontend_type>text</frontend_type>
                            <validate>validate-number</validate>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </item_count>
                        <slider_attribute>
                            <label>Select Attributes</label>
                            <frontend_type>select</frontend_type>
                            <source_model>zeon_attributemapping/system_config_source_attributes</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select attributes to be shown in top menu</comment>
                        </slider_attribute>
                    </fields>
                </front_scroller>
            </groups>
        </zeon_attributemapping>
    </sections>
</config>