<?xml version="1.0"?>
<config>
    <modules>
        <Magalter_Crossup>
            <version>1.0.5</version>
        </Magalter_Crossup>
    </modules> 
    <frontend>        
        <translate>
            <modules>
                <Magalter_Crossup>
                    <files>
                        <default>Magalter_Crossup.csv</default>
                    </files>
                </Magalter_Crossup>
            </modules>
        </translate>
        <routers>
            <magalter_crossup>
                <use>standard</use>
                <args>
                    <module>Magalter_Crossup</module>
                    <frontName>magalter_crossup</frontName>
                </args>
            </magalter_crossup>
        </routers>
        <layout>
            <updates>
                <magalter_crossup module="Magalter_Crossup">
                    <file>magalter_crossup.xml</file>
                </magalter_crossup>
            </updates>
        </layout>    
        <events>  
            
             <core_block_abstract_to_html_after>
                 <observers>
                    <magalter_crossup_abstract_block_after>
                        <class>magalter_crossup/observer</class>
                        <method>toHtmlAfter</method>
                    </magalter_crossup_abstract_block_after>
                </observers>         
            </core_block_abstract_to_html_after>
           
