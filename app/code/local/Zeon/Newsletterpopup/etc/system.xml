<config>
    <sections>
        <newsletter translate="label" module="newsletterpopup">
            <groups>
                <subscription translate="label">
                    <fields>
                        <active_popup translate="label comment">
                            <label>Enable Subscription Popup</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable/Disable the newsletter popup on all pages.</comment>
                        </active_popup>
                        <active_lefttemplate translate="label comment">
                            <label>Enable Subscription on Left Column</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>101</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable/Disable the newsletter subscription template on left column.</comment>
                        </active_lefttemplate>
                    </fields>
                </subscription>
            </groups>
        </newsletter>
    </sections>
</config>
