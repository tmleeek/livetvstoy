<config>
<tabs>
    <responsys translate="label" module="responsys">
        <label>Responsys</label>
        <sort_order>210</sort_order>
    </responsys>
</tabs>
<sections>
    <responsys translate="label" module="responsys">
        <label>Responsys API Settings</label>
        <tab>responsys</tab>
        <frontend_type>text</frontend_type>
        <sort_order>100</sort_order>
        <show_in_default>1</show_in_default>
        <show_in_website>1</show_in_website>
        <show_in_store>1</show_in_store>
        <groups>
            <general translate="label">
                <label>Responsys API Settings</label>
                <frontend_type>text</frontend_type>
                <sort_order>20</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>1</show_in_website>
                <show_in_store>1</show_in_store>
                <fields>                    
                    <responsys_wsdl_url translate="label">
                            <label>WSDL Url</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                    </responsys_wsdl_url>
                    <responsys_wsdl_endpoint translate="label">
                            <label>WSDL Endpoint</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                    </responsys_wsdl_endpoint>
                    <responsys_interact_uri translate="label">
                            <label>Interact URI</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                    </responsys_interact_uri>
                    <responsys_username translate="label">
                            <label>Username</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                    </responsys_username>
                    <responsys_password translate="label">
                        <label>Password</label>
                        <frontend_type>text</frontend_type>
                        <sort_order>60</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                    </responsys_password>
                    <responsys_folder_name translate="label">
                        <label>Folder Name</label>
                        <frontend_type>text</frontend_type>
                        <sort_order>70</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                        <comment>&lt;strong style="color:red"&gt;Warning!&lt;/strong&gt; Make sure that folder name should not be empty.</comment>
                    </responsys_folder_name>
                    <responsys_contatct_list translate="label">
                        <label>Contact List</label>
                        <frontend_type>text</frontend_type>
                        <sort_order>80</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                    </responsys_contatct_list>
                    <enable_debug translate="label">
                        <label>Enable Debugging</label>
                        <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>999</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        <comment>Debug log will be generated at var/log/responsys.log file.</comment>
                    </enable_debug>
                </fields>
            </general>            
            <responsys_variable translate="label">
                <label>Responsys Variables</label>
                <frontend_type>text</frontend_type>
                <sort_order>40</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>0</show_in_website>
                <show_in_store>0</show_in_store>
                <fields>
                    <responsys_add_variable translate="label">
                            <!--<label>Responsys Variable</label>-->
                            <frontend_type>select</frontend_type>
                            <frontend_model>responsys/adminhtml_variables</frontend_model>
                            <backend_model>adminhtml/system_config_backend_serialized</backend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                    </responsys_add_variable>
                </fields>
            </responsys_variable>
        </groups>
    </responsys>
</sections>
</config>