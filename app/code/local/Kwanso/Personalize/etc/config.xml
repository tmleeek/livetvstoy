<?xml version="1.0"?>
<config>
  <modules>
    <Kwanso_Personalize>
      <version>1.1.0</version>
    </Kwanso_Personalize>
  </modules>
  <global>
  	<blocks>
      <personalize>
        <class>Kwanso_Personalize_Block</class>
      </personalize>
    </blocks>
    <helpers>
      <personalize>
        <class>Kwanso_Personalize_Helper</class>
      </personalize>
    </helpers>

    <resources>
      <personalize_setup>
        <setup>
          <module>Kwanso_Personalize</module>
        </setup>
        <connection>
          <use>core_setup</use>
        </connection>
      </personalize_setup>
      <personalize_write>
          <connection>
            <use>core_write</use>
          </connection>
      </personalize_write>
      <personalize_read>
          <connection>
            <use>core_read</use>
          </connection>
      </personalize_read>
    </resources>

  </global>
</config>