<?php
  $collection = $this->getFilterableAttributes();
  if (sizeOf($collection)) :
?>
<p class="switcher"><label for="attribute_switcher"><?php echo $this->__('Choose Attribute') ?>:</label>
<select name="attribute_switcher" id="attribute_switcher" onchange="return switchattribute(this);">
<?php
     foreach ($collection as $attribute) :
?>
<option value="<?php echo $this->getAttributeSwitchUrl($attribute->getId()); ?>" <?php if ($attribute->getId() == $this->getRequest()->getParam('id')) { ?>selected="selected"<?php }?>><?php echo $attribute->getFrontendLabel();?></option>
<?php
	 endforeach;
?>
</select>
<?php
  endif;
?>
<script type="text/javascript">
    function switchattribute(obj){
        setLocation(obj.value);
    }
</script>

