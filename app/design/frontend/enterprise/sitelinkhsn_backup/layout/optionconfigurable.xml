			<action method="addCss"><stylesheet>pektsekye/optionconfigurable/main.css</stylesheet></action>				
			<action method="addJs"><script>pektsekye/optionconfigurable/images.js</script></action>				
			<action method="addJs"><script>pektsekye/optionconfigurable/main.js</script></action>
			
      <action method="addCss"><stylesheet>pektsekye/optionconfigurable/colorbox.css</stylesheet></action>	        
