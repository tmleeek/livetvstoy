<div class="recent-orders">
<?php $_orders = $this->getOrders(); ?>
    <h2 class="table-caption"><?php echo $this->__('Recent Orders') ?><?php if( sizeof($_orders->getItems()) > 0 ): ?> <a href="<?php echo $this->getUrl('sales/order/history') ?>"><?php echo $this->__('View all Orders') ?></a><?php endif; ?></h2>
    <?php echo $this->getChildHtml()?>
<?php if( sizeof($_orders->getItems()) > 0 ): ?>
    <table class="data-table" id="my-orders-table">
    <col width="1" />
    <col width="1" />
    <col />
    <col width="1" />
    <col width="140" />
    <col />
        <thead>
            <tr>
                <th><?php echo $this->__('Order Number') ?></th>
                <th><?php echo $this->__('<span class="table-span">Order</span> Date') ?></th>
                <th class="ship-to-acc"><?php echo $this->__('Ship To') ?></th>
                <th><span class="nobr"><?php echo $this->__('Total') ?></span></th>
                <th><?php echo $this->__('Status') ?></th>
                <th class="last">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            <?php foreach ($_orders as $_order): ?>
                <tr>
                    <td><a href="<?php echo $this->getViewUrl($_order) ?>"><?php echo $_order->getRealOrderId() ?></a></td>
                    <td><span class="nobr"><?php echo $this->formatDate($_order->getCreatedAtStoreDate()) ?></span></td>
                    <td class="ship-to-acc"><?php echo $_order->getShippingAddress() ? $this->escapeHtml($_order->getShippingAddress()->getName()) : '&nbsp;' ?></td>
                    <td><?php echo $_order->formatPrice($_order->getGrandTotal()) ?></td>
                    <td><?php echo $_order->getStatusLabel() ?></td>
                    <td class="a-center">
                        <a href="<?php echo $this->getViewUrl($_order) ?>" class="nobr"><?php echo $this->__('View Order') ?></a>
                        <?php if ($this->helper('sales/reorder')->canReorder($_order)) : ?>
                           <span class="separator">|</span><a href="<?php echo $this->getReorderUrl($_order) ?>" class="nobr"><?php echo $this->__('Reorder') ?></a>
                        <?php endif ?>
                    </td>
                </tr>
            <?php endforeach; ?>
        </tbody>
    </table>
    <script type="text/javascript">decorateTable('my-orders-table')</script>
<?php else: ?>
    <p class="empty-history"><?php echo $this->__('You have placed no orders.'); ?></p>
<?php endif; ?>
</div>
