        </reference>      
         <reference name = "before_body_end">
            <block type = "magalter_crossup/products" name="magalter.crossup.products" as = "magalter.crossup.products" />          
        </reference>     
    </default>  
    <checkout_cart_index>
        <reference name = "before_body_end">
            <block type = "magalter_crossup/products" name="magalter.crossup.products.template" template="magalter_crossup/wrapper.phtml" as = "magalter.crossup.products.template" />          
        </reference>   
    </checkout_cart_index> 
