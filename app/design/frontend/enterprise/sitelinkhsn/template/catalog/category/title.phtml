/**
 * Category title template
 *
 * @see Mage_Catalog_Block_Category_View
 */
?>
<?php
    $_helper    = $this->helper('catalog/output');
    $_category  = $this->getCurrentCategory();
?>

<div class="page-title category-title">
  <?php if($this->IsRssCatalogEnable()): ?>
  <a href="<?php echo $this->getRssLink() ?>" title="<?php echo $this->__('Subscribe to RSS Feed') ?>" class="rss-feed"><?php echo $this->__('Subscribe to RSS Feed') ?></a>
  <?php endif; ?>
  <?php
$isContentMode = $this->getLayout()->createBlock('catalog/category_view')->isContentMode();
$isMixedMode = $this->getLayout()->createBlock('catalog/category_view')->isContentMode();
$_productListMode = ($isContentMode || $isMixedMode); ?>
  <pre class="category-pre"><h1><?php echo $_helper->categoryAttribute($_category, $this->getCurrentCategory()->getName(), 'name') ?></h1></pre>
  <?php
	// if category page
	if ($_productListMode) { ?>
  <div class="filter-col-block  browser-cat left">
    <div class="filter-icon"> <span></span> <span></span> <span></span> </div>
      <span class="title">Browse Categories</span> </div>
    <?php } ?>
    <?php
    if ($this->getCurrentCategory()->getDescription()) { ?>
     <div class="category-description std"> <?php echo $this->getCurrentCategory()->getDescription(); ?> </div>
    <?php
    } ?>
  <script type="text/javascript">
			jQuery(document).ready(function() {
				jQuery('body.catalog-category-view').addClass('cat-listing');
				if (jQuery(window).width() < 991) {
					jQuery('.filter-toggle').hide();
				}
			});
		</script>
  <?php
