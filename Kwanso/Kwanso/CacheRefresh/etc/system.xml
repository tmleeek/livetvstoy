<?xml version="1.0"?>
<config>
	  <sections>
		<cacherefresh  translate="label" module="cacherefresh">
			<label>Cache Refresh</label>
			<tab>personalize1</tab>
			<frontend_type>text</frontend_type>
			<sort_order>0</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
				<groups>
			      	<general translate="label"> 
				  		<label>General</label>
					  	<frontend_type>text</frontend_type>
					  	<sort_order>0</sort_order>
					  	<show_in_default>1</show_in_default>
					  	<show_in_website>1</show_in_website>
					  	<show_in_store>1</show_in_store>
			       		<fields>

							<enable translate="label">
								<label>Enable Cache Refresh Module</label>
								<frontend_type>select</frontend_type>
								<source_model>adminhtml/system_config_source_yesno</source_model>
								<sort_order>0</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
							</enable>

							<cache_types translate="label">
						        <label>Cache Types to be Refreshed</label>
						        <frontend_type>multiselect</frontend_type>
						        <source_model>cacherefresh/system_config_source_types</source_model>
						        <sort_order>40</sort_order>
						        <show_in_default>1</show_in_default>
						    </cache_types>

						</fields>
				   	</general>
				</groups>	
		</cacherefresh>

		<sales translate="label" module="sales">
            <class>separator-top</class>
            <label>Sales</label>
            <tab>sales</tab>
            <frontend_type>text</frontend_type>
            <sort_order>300</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <reports translate="label,comment">
                    <label>Reports</label>
                    <sort_order>70</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                         <exportsize translate="label">
                            <label>File Export Limit</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Note : Larger value can effect the performance (Default value 1000 will be used in case of empty field)</comment>
                        </exportsize>
                    </fields>
                </reports>

            </groups>
        </sales>


	  </sections>
</config>
