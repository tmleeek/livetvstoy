<?xml version="1.0"?>
<config>
	<tabs>
		<personalize1 translate="label" module="personalize">
			<label>Kwanso Extensions</label>
			<sort_order>100</sort_order>
		</personalize1>
	</tabs>
	<sections>
		<personalize2  translate="label" module="personalize">
			<label>Modular Shipment Days</label>
			<tab>personalize1</tab>
			<frontend_type>text</frontend_type>
			<sort_order>0</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<personalize3 translate="label">
					<label>Shipment Custom Text</label>
					<frontend_type>text</frontend_type>
					<sort_order>0</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<switch translate="label">
							<label>Switch</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>0</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Disabling this, custom text will not be shown on frontend</comment>
						</switch>
						<shipping_costs translate="label">
							<label>Shipment Custom Text : </label>
							<frontend_model>kwanso_personalize_block_config_costs</frontend_model>
							<backend_model>adminhtml/system_config_backend_serialized_array
							</backend_model>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</shipping_costs>
					</fields>
				</personalize3>
			</groups>
		</personalize2>
	</sections>
</config>
